<div class="jm-product-list <?php echo $config['mode']; ?> clearfix">			<?php if($config['title']){?><div class="head"><h4><?php echo $config['title']; ?></h4></div><?php }; ?>		<div class="listing-type-grid catalog-listing">			<?php $_collectionSize = $listall?$listall->count():0 ?>			<?php $i = 0;				$width = 100;				// -- added by Duchh 15/12/2009				$thumbnailw = $config['width'];				$thumbnailh = $config['height'];				$numberchar = $config['max'];				if ($config['perrow']) $width = 99/$config['perrow'];				$width = "style=\"width:{$width}%;\"";                                $return = false;                			?>										<?php if($_collectionSize){?>				<?php foreach ($listall->getItems() as $_product){ ?> 						<?php if($i++%$config['perrow']==0): ?>				        <ol class="grid-row">				      <?php endif; ?>						<li class="item" <?php echo $width;?>>														<p class="product-image">								<a title="<?php echo $this->htmlEscape($_product->getName()) ?>" href="<?php echo $_product->getProductUrl() ?>">									<img src="<?php echo $this->helper('catalog/image')->init($_product, 'thumbnail')->resize($thumbnailw, $thumbnailh)->setWatermarkSize('30x10'); ?>" alt="<?php echo $this->htmlEscape($_product->getName()) ?>"/>								</a>							</p>							<div class="product-information">								<h5>									<a title="<?php echo $this->htmlEscape($_product->getName()) ?>" href="<?php echo $_product->getProductUrl() ?>"><?php echo $_product->getName() ?></a>								</h5>								<?php echo $this->getPriceHtml($_product,true, '_jmproduct') ?>																<?php if($numberchar) : ?>									<p class="pdescription"><?php echo substr(nl2br($_product->getDescription()), 0, $numberchar).'...';?></p>								<?php endif; ?>								<?php if($_product->getRatingSummary()): ?>					            	<?php echo $this->getReviewsSummaryHtml($_product) ?>					        <?php endif; ?>																		<?php if($_product->isSaleable()){ ?>									<button class="form-button" onclick="setLocation('<?php echo $this->getAddToCartUrl($_product) ?>')">										<span><?php echo $this->helper("catalog")->__('Add to Cart') ?></span>									</button>									<?php } else { ?>									<div class="out-of-stock"><?php echo $this->helper("catalog")->__('Out of stock') ?></div>									<?php } ?>									<p class="add-to">									<?php if ($this->helper('wishlist')->isAllow()) : ?>									<a href="<?php echo $this->helper('wishlist')->getAddUrl($_product) ?>" class="link-cart">										<?php echo $this->__('Add to Wishlist') ?>									</a>																		<?php endif; ?>									<?php if($_compareUrl=$this->getAddToCompareUrl($_product)): ?>										<br />										<a href="<?php echo $_compareUrl ?>"><?php echo $this->__('Add to Compare') ?></a>									<?php endif; ?>								</p>							 </div>						</li>													<?php if($i%$config['perrow']==0 || $i==$_collectionSize): ?>				        </ol>                <div class="ja-dot">&nbsp;</div>				        <?php endif; ?>												<?php }?>						<script type="text/javascript">				decorateGeneric($$('.grid-row'), ['last', 'odd', 'even']);				decorateGeneric($$('.ja-dot'), ['last', 'odd', 'even']);				</script>			<?php }?>			</div>				</div>